{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "EC2 manifest for instance store AMIs",
	"type": "object",
	"properties": {
		"credentials": {
			"type": "object",
			"properties": {
				"certificate": {
					"type": "string"
				},
				"private-key": {
					"type": "string"
				},
				"user-id": {
					"type": "string"
				}
			}
		},
		"image": {
			"type": "object",
			"properties": {
				"bucket": {
					"type": "string"
				},
				"tags": {
					"type": "object",
					"patternProperties": {
						"^[a-zA-Z0-9_-]+$": {
							"type": "string"
						}
					},
					"minItems": 1
				}
			},
			"required": ["bucket"]
		},
		"volume": {
			"type": "object",
			"properties": {
				"partitions": {
					"type": "object",
					"properties": {
						"type": { "enum": ["none"] }
					}
				}
			}
		}
	},
	"required": ["image"]
}
